# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                   controllers.HomeController.index
GET     /explore                            controllers.HomeController.explore
GET     /tutorial                           controllers.HomeController.tutorial
GET     /testTimes/:msg/:times              controllers.HomeController.test(msg: String, times: Int)
GET     /headers                            controllers.HomeController.headers
GET     /display                            controllers.HomeController.displayInfo
GET     /testTwirl/:name                    controllers.HomeController.TestTwirl(name: String)
GET     /testForm                           controllers.HomeController.TestForm


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
