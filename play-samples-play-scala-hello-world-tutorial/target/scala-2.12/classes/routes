# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                   controllers.HomeController.index
GET     /explore                            controllers.HomeController.explore
GET     /tutorial                           controllers.HomeController.tutorial
GET     /testTimes/:msg/:times              controllers.HomeController.test(msg: String, times: Int)
GET     /headers                            controllers.HomeController.headers
GET     /display                            controllers.HomeController.displayInfo
GET     /testTwirl/:name                    controllers.HomeController.TestTwirl(name: String)
GET     /testForm                           controllers.HomeController.TestForm
GET     /JsonIndex                          controllers.HomeController.JsonIndex

#Mark Lewis Controller
GET     /TodoIndex                          controllers.MarkLewisController.TodoIndex
GET     /product/:prodType/:prodNum         controllers.MarkLewisController.product(prodType, prodNum: Int)
GET     /productRE/$prodType<[a-z]{2}\d\d>/:prodNum         controllers.MarkLewisController.product(prodType, prodNum: Int)
GET     /login                              controllers.MarkLewisController.login
GET     /validateGet                        controllers.MarkLewisController.validateLoginGet(username, password)
POST    /createUser                         controllers.MarkLewisController.createUser
POST    /validatePost                       controllers.MarkLewisController.validateLoginPost
POST    /validateForm                       controllers.MarkLewisController.validateLoginForm
GET     /logout                             controllers.MarkLewisController.logout
POST    /addTask                            controllers.MarkLewisController.addTask
POST    /deleteTask                         controllers.MarkLewisController.deleteTask
GET     /testAsync                          controllers.MarkLewisController.testAsync
GET     /delayAsync                         controllers.MarkLewisController.delayAsync


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
